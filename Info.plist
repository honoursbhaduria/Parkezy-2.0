<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- App Transport Security -->
    <key>NSAppTransportSecurity</key>
    <dict>
        <key>NSAllowsArbitraryLoads</key>
        <false/>
    </dict>
    
    <!-- Location Permissions -->
    <key>NSLocationWhenInUseUsageDescription</key>
    <string>ParkEzy needs your location to find nearby parking spots and provide navigation.</string>
    
    <key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
    <string>ParkEzy needs background location access to monitor your parking geofence and notify you of arrival/departure.</string>
    
    <!-- Camera Permission (for QR scanning and parking space capture) -->
    <key>NSCameraUsageDescription</key>
    <string>ParkEzy needs camera access to capture photos and videos of your parking space, and to scan QR codes.</string>
    
    <!-- Photo Library Permission (for dispute reports) -->
    <key>NSPhotoLibraryUsageDescription</key>
    <string>ParkEzy needs access to your photos to attach evidence to dispute reports.</string>
    
    <!-- Notifications -->
    <key>UIBackgroundModes</key>
    <array>
        <string>location</string>
        <string>fetch</string>
        <string>remote-notification</string>
    </array>
    
    <!-- Supports Live Activities -->
    <key>NSSupportsLiveActivities</key>
    <true/>
    
    <!-- App Groups for Widget/Extension sharing -->
    <key>com.apple.security.application-groups</key>
    <array>
        <string>group.com.parkezy.shared</string>
    </array>
    
    <!-- URL Schemes for Deep Links -->
    <key>CFBundleURLTypes</key>
    <array>
        <dict>
            <key>CFBundleURLName</key>
            <string>com.parkezy.app</string>
            <key>CFBundleURLSchemes</key>
            <array>
                <string>parkezy</string>
            </array>
        </dict>
    </array>
    
    <!-- Siri & Voice Shortcuts -->
    <key>NSSiriUsageDescription</key>
    <string>ParkEzy uses Siri to help you find parking and check your session status hands-free.</string>
    
    <!-- Apple Wallet -->
    <key>PKAddPassButtonUsageDescription</key>
    <string>Add your parking pass to Apple Wallet for quick access.</string>
    
    <!-- App Clip Configuration (optional) -->
    <key>NSAppClip</key>
    <dict>
        <key>NSAppClipRequestEphemeralUserNotification</key>
        <true/>
        <key>NSAppClipRequestLocationConfirmation</key>
        <true/>
    </dict>
    
    <!-- Display Name -->
    <key>CFBundleDisplayName</key>
    <string>ParkEzy</string>
    
    <!-- Bundle Identifier -->
    <key>CFBundleIdentifier</key>
    <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
    
    <!-- Version -->
    <key>CFBundleShortVersionString</key>
    <string>1.0</string>
    
    <key>CFBundleVersion</key>
    <string>1</string>
    
    <!-- Supported Interface Orientations -->
    <key>UISupportedInterfaceOrientations</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
    </array>
    
    <!-- Launch Screen -->
    <key>UILaunchScreen</key>
    <dict/>
    
    <!-- Appearance -->
    <key>UIUserInterfaceStyle</key>
    <string>Automatic</string>
</dict>
</plist>
